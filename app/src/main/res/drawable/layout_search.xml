<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape">
        <shape
            android:shape="rectangle" >

            <solid
                android:color="@color/white" >
            </solid>

            <stroke
                android:width="1dp"
                android:alpha="0.20"
                android:color="@color/grayLight" >
            </stroke>

            <corners
                android:radius="2dp">
            </corners>

        </shape>
    </item>
</layer-list>